<%= simple_format(blog.text) %>
<span class="name">
  <a href="">
    <span>投稿者</span><%= blog.user.nickname %>
  </a>

  <% if user_signed_in? && current_user.id == blog.user_id %>
    <div class="more">
      <ul class="more_list">
        <div style="display:inline-flex">
          <li>
            <%= link_to '編集', edit_blog_path(blog), class: "waves-effect waves-light btn" %>
          </li>
          <li>
            <%= link_to '削除', blog_path(blog), class: "waves-effect waves-light btn", :method => :delete %>
          </li>
        </div>
      </ul>
    </div>
  <% end %>

</span>
